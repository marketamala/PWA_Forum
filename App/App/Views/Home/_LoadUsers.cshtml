@model IEnumerable<App.Models.Accounts>

@{
    ViewBag.Title = "_LoadUsers";
}

@if (Model.Count() > 0)
{
<table class="table" style="margin-left: 10px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th style="width: 25%">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="width: 10%"></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td style="width: 25%">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td style="width: 10%">
            @Html.ActionLink("Profil", "ShowUser", "Home", item, new { @class = "btn", @style = "background-color: black; color:white; font-size: 10px; width: 70px; height: 25px; position: absolute; right: 20px" })
        </td>
    </tr>
    }
</table>
}

