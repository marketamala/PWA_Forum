@model App.Models.Posts

@{
    ViewBag.Title = "NewPost";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ThemeID)
        @Html.HiddenFor(model => model.AddedBy)
        @Html.HiddenFor(model => model.AddedAt)
        <div class="form-group" style="width: 100%">
            @Html.Label("Nový příspěvek", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="height:100px">
                @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @style = "max-height: 90%; height: 90%" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Přidat" class="btn btn-default" style="background-color: black; color:white" />
            </div>
        </div>
    </div>
}

