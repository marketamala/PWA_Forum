@model App.Models.Searching

@{
    ViewBag.Title = "ShowThemes";
}

<h2>Diskusní forum</h2>

<div class="form-horizontal" style="margin-bottom: 35px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (Session["UserID"] != null)
    {
        <div class="form-group">
            @Html.ActionLink("Založit nové téma", "NewTheme", "ForumManage", new { @class = "btn btn-default", @style = "background-color: black; color:white; position: absolute; right: 20px" })
        </div>
        <hr />
    }
    <div class="form-group" style="margin-bottom: 15px">
        <div class="col-md-10" style="width: 35%">
            @Html.EditorFor(model => model.FindTheme, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FindTheme, "", new { @class = "text-danger" })
        </div>
        <input type="submit" value="Hledat" class="btn btn-default" style="background-color: black; color:white" />
    </div>
    <hr />
    <div>
        @{ Html.RenderAction("_LoadThemes", Model); }
    </div>
</div>






